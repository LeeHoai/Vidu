@model PagedList.IPagedList<ShoeShopMain.Domain.EF.TAIKHOAN>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Trang tài khoản
}

<div class="row">
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="/Admin/TaiKhoan/Create" class="btn btn-primary">Thêm mới tài khoản</a>
            </div>
            <div class="panel-heading">
                Thông tin tài khoản
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Index", "TaiKhoan", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" name="searchString"/>
                            </div>
                            <div class="col-md-4">
                                <button type="submit">Tìm kiếm</button>
                            </div>
                        </div>
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Mã tài khoản</th>
                                <th>Họ tên</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Email</th>
                                <th>Quyền</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX" id="row_@item.MaTaiKhoan">
                                    <td>@item.MaTaiKhoan</td>
                                    <td>@item.HoTen</td>
                                    <td>@item.SoDienThoai</td>
                                    <td>@item.DiaChi</td>
                                    <td>@item.Email</td>
                                    <td>@item.MaQuyen</td>
                                    <td>
                                        <a href="/Admin/TaiKhoan/Edit/@item.MaTaiKhoan">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.MaTaiKhoan}, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa tài khoản này",
                                       OnComplete = "$('#row_" + @item.MaTaiKhoan + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>