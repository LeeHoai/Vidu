@model PagedList.IPagedList<ShoeShopMain.Domain.EF.SANPHAM>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Trang sản phẩm
}

<div class="row">
    <div class="col-lg-12">
        <!-- Advanced Tables -->
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="/Admin/SanPham/Create" class="btn btn-primary">Thêm mới Sản phẩm</a>
            </div>
            <div class="panel-heading">
                Thông tin tài khoản
            </div>
            @using (Html.BeginForm("Index", "SanPham", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-md-4">
                            <input type="text" name="searchString" />
                        </div>
                        <div class="col-md-4">
                            <button type="submit">Tìm kiếm</button>
                        </div>
                    </div>
                </div>
            }
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Mã sản phẩm</th>
                                <th>Tên sản phẩm</th>
                                <th>Số lượng tồn</th>
                                <th>Mã loại SP</th>
                                <th>Mã NSX</th>
                                <th>Mã NCC</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd gradeX" id="row_@item.MaSP">
                                    <td>@item.MaSP</td>
                                    <td>@item.TenSP</td>
                                    <td>@item.SoLuongTon</td>
                                    <td>@item.MaLoaiSP</td>
                                    <td>@item.MaNSX</td>
                                    <td>@item.MaNCC</td>
                                    <td>
                                        <a href="/Admin/SanPham/Edit/@item.MaSP">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xóa", "Delete", new { @id = item.MaSP }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xóa sản phẩm này",
                                       OnComplete = "$('#row_" + @item.MaSP + "').remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>

            </div>
        </div>
        <!--End Advanced Tables -->
    </div>
</div>

